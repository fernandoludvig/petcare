generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String        @id @default(cuid())
  name          String
  clerkId       String        @unique
  email         String        @unique
  phone         String?
  address       String?
  businessHours Json?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  appointments  Appointment[]
  clients       Client[]
  pets          Pet[]
  services      Service[]
  users         User[]
}

model User {
  id             String        @id @default(cuid())
  clerkId        String        @unique
  email          String        @unique
  name           String
  role           UserRole      @default(ADMIN)
  avatarUrl      String?
  organizationId String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  appointments   Appointment[]
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model Client {
  id             String        @id @default(cuid())
  name           String
  email          String?
  phone          String
  cpf            String?
  address        String?
  notes          String?
  organizationId String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  appointments   Appointment[]
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  pets           Pet[]

  @@unique([organizationId, phone])
  @@index([organizationId])
}

model Pet {
  id             String        @id @default(cuid())
  name           String
  species        Species       @default(DOG)
  breed          String?
  size           PetSize
  weight         Float?
  birthDate      DateTime?
  color          String?
  gender         Gender?
  medicalNotes   String?
  behaviorNotes  String?
  photoUrl       String?
  clientId       String
  organizationId String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  appointments   Appointment[]
  client         Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([organizationId])
  @@index([organizationId, name])
}

model Service {
  id             String        @id @default(cuid())
  name           String
  description    String?
  priceMini      Float?
  priceSmall     Float?
  priceMedium    Float?
  priceLarge     Float?
  priceGiant     Float?
  durationMini   Int           @default(30)
  durationSmall  Int           @default(45)
  durationMedium Int           @default(60)
  durationLarge  Int           @default(90)
  durationGiant  Int           @default(120)
  active         Boolean       @default(true)
  organizationId String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  appointments   Appointment[]
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

model Appointment {
  id             String            @id @default(cuid())
  startTime      DateTime
  endTime        DateTime
  status         AppointmentStatus @default(SCHEDULED)
  petId          String
  clientId       String
  serviceId      String
  assignedToId   String?
  organizationId String
  price          Float
  paid           Boolean           @default(false)
  paymentMethod  PaymentMethod?
  notes          String?
  beforePhotoUrl String?
  afterPhotoUrl  String?
  reminderSent   Boolean           @default(false)
  reminderSentAt DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  assignedTo     User?             @relation(fields: [assignedToId], references: [id])
  client         Client            @relation(fields: [clientId], references: [id], onDelete: Cascade)
  organization   Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  pet            Pet               @relation(fields: [petId], references: [id], onDelete: Cascade)
  service        Service           @relation(fields: [serviceId], references: [id])

  @@index([organizationId, startTime])
  @@index([petId])
  @@index([clientId])
}

enum UserRole {
  ADMIN
  GROOMER
  BATHER
  ATTENDANT
}

enum Species {
  DOG
  CAT
  OTHER
}

enum PetSize {
  MINI
  SMALL
  MEDIUM
  LARGE
  GIANT
}

enum Gender {
  MALE
  FEMALE
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum PaymentMethod {
  CASH
  DEBIT_CARD
  CREDIT_CARD
  PIX
  VOUCHER
}
